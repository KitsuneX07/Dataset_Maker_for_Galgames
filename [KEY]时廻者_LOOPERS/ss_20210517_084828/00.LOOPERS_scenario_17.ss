// ----------------------------------------------------------------------------------------------------
// 舞い上がる光表示
// ----------------------------------------------------------------------------------------------------
command $light_disp
{

	property $i

	for ($i = 0, $i < 5, $i += 1)	{
		@f.obj[100+$i].tr_eve.set(100, 3000, 0, 0)
	}



}


// ----------------------------------------------------------------------------------------------------
// 光消去
// ----------------------------------------------------------------------------------------------------
command $light_erase
{

	property $i

	for ($i = 0, $i < 5, $i += 1)	{

		@f.obj[100+$i].wipe_copy = @Off

	}

}











