	$g_initialize_particle(
		@b.obj[100],
		"ef_light",
		50, 1, 1,				// 最大数、自動で透過する？、自動で縮小する？
		960, 1000, 900,			// X座標、Y座標、レイヤー
		1, 1, 1,				// 合成方法、表示フラグ、ワイプコピーフラグ
		-960, 960, 100, 200,	// オフセットX座標(最小、最大)、オフセットY座標(最小、最大)
		-1, 1, -2, -9,			// 初速X(最小、最大)、初速Y(最小、最大)
