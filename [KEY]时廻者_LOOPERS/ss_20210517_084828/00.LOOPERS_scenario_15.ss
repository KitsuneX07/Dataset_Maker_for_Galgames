// タイラ消失
command $ef_ty_vanish
{

	@b.obj[@obj_effect20].create_movie(ef_ty_vanish, @Off, 0, 0, ready_only = @On)
	@b.obj[@obj_effect20].set_scale(<SCREEN_WIDTH> * 1000 / 1280, <SCREEN_HEIGHT> * 1000 / 720)
	@b.obj[@obj_effect20].layer = 0
	@b.obj[@obj_effect20].wipe_copy = @On

	close
	@bg_set(bg06s3)
	@bs_set(0, ty0115, @pos_c)
	@b.obj[@obj_effect20].disp = @On
	@wipe(3)
	@timewaitkey(1000)

	@f.obj[@obj_effect20].resume_movie
	@bg(bg06s3)
	@timewaitkey(3000)


}


// 黒い渦
command $ef_vortex
{

	@bg_set_ex(b_bg06s3, 0, 0, 130, 130)
	@b.obj[@obj_effect20].create_movie_loop(ef_vortex, @On)
	@b.obj[@obj_effect20].set_scale(<SCREEN_WIDTH> * 1000 / 1024, <SCREEN_HEIGHT> * 1000 / 512)
	@b.obj[@obj_effect20].layer = 100
	@b.obj[@obj_effect20].blend = 3
	@wipe(3)

}
