// 光の柱
command $ef_LuminousPillar
{

	@obj_cd_create(@obj_bk, @obj_effect19, 2)

	@b.obj[@obj_effect19].@cd[0].create(ef_LuminousPillar, @On)
	@b.obj[@obj_effect19].@cd[1].create(ef_LuminousPillar, @On, 0, 1080)
	@b.obj[@obj_effect19].@cd[1].patno = 1
	@b.obj[@obj_effect19].y = -1080
	@b.obj[@obj_effect19].y_eve.set(0, 15000, 0, 2)

	@wipe(4)

}


// ゲート光
command $ef_gate(property $switch)
{

	if ($switch == 1)	{

		@f.obj[@obj_effect20].create_movie(ef_gate, @Off, 320, -210, ready_only = @On)
		@f.obj[@obj_effect20].layer = 100
		@f.obj[@obj_effect20].blend = 1
		@f.obj[@obj_effect20].wipe_copy = @On

	}
	elseif ($switch == 2)	{

		@f.obj[@obj_effect20].disp = @On
		@f.obj[@obj_effect20].resume_movie

	}
	else	{

		@f.obj[@obj_effect20].wipe_copy = @Off

	}

}

